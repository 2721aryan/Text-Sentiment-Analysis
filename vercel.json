{
    "version": 2,
    "buildCommand": "pip install textblob==0.15.3 nltk==3.6.2 && python -c \"import nltk; nltk.download('punkt'); nltk.download('averaged_perceptron_tagger')\"",
    "functions": {
        "api/index.py": {
            "memory": 1024,
            "maxDuration": 10
        },
        "api/about.py": {
            "memory": 512,
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/css/(.*)",
            "dest": "/public/css/$1"
        },
        {
            "src": "/about",
            "dest": "/api/about.py"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ]
} 
{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ],
    "installCommand": "pip install flask==2.0.1 textblob==0.15.3 nltk==3.6.2 && python -c \"import nltk; nltk.download('punkt'); nltk.download('averaged_perceptron_tagger')\""
} 